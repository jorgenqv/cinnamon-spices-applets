{
    "layout":{
        "type":"layout",
        "pages":[
            "layout",
            "behaviour",
            "appearance"
        ],
        "layout":{
            "type":"page",
            "title":"Layout and Content",
            "sections":[
                "menu-layout",
                "menu-content"
            ]
        },
        "behaviour":{
            "type":"page",
            "title":"Behavior",
            "sections":[
                "panel-behave",
                "menu-behave"
            ]
        },
        "appearance":{
            "type":"page",
            "title":"Appearance",
            "sections":[
                "panel-appear",
                "menu-icons"
            ]
        },
        "menu-layout":{
            "type":"section",
            "title":"Layout",
            "keys":[
                "applications-view-mode",
                "sidebar-placement",
                "add-favorites",
                "description-placement"
            ]
        },
        "menu-content":{
            "type":"section",
            "title":"Content",
            "keys":[
                "show-places-category",
                "show-recents-category",
                "show-web-bookmarks-category",
                "show-favorite-apps-category",
                "show-home-folder-category",
                "menu-editor-button"
            ]
        },
        "panel-behave":{
            "type":"section",
            "title":"Panel",
            "keys":[
                "overlay-key",
                "activate-on-hover",
                "hover-delay",
                "enable-animation"
            ]
        },
        "menu-behave":{
            "type":"section",
            "title":"Menu",
            "keys":[
                "category-click",
                "open-on-favorites",
                "enable-autoscroll",
                "web-search-option",
                "enable-emoji-search",
                "show-hidden-files"
            ]
        },
        "panel-appear":{
            "type":"section",
            "title":"Panel",
            "keys":[
                "menu-icon-custom",
                "menu-icon",
                "menu-label"
            ]
        },
        "menu-icons":{
            "type":"section",
            "title":"Menu",
            "keys":[
                "category-icon-size",
                "apps-list-icon-size",
                "apps-grid-icon-size",
                "sidebar-icon-size",
                "use-box-style"
            ]
        }
    },

    "categories":{
        "type":"generic",
        "default":[]
    },
    "custom-menu-width":{
        "type":"generic",
        "default":800
    },
    "custom-menu-height":{
        "type":"generic",
        "default":530
    },

    "applications-view-mode":{
        "type":"combobox",
        "default":1,
        "description":"Applications view mode",
        "options":{
            "List":0,
            "Grid":1
        },
        "tooltip":"View applications as list or grid"
    },
    "description-placement":{
        "type":"combobox",
        "default":1,
        "description":"Application description placement",
        "options":{
            "Tooltips":1,
            "Under titles":2,
            "None":3
        },
        "tooltip":"Choose where to show application descriptions"
    },
    "sidebar-placement":{
        "type":"combobox",
        "default":1,
        "description":"Session buttons location",
        "options":{
            "Top":0,
            "Bottom":1,
            "Left":2,
            "Right":3
        },
        "tooltip":"Choose where to show the session buttons (quit, logout, etc.)"
    },
    "add-favorites":{
        "type":"switch",
        "default":true,
        "description":"Add favorites to session buttons",
        "tooltip":"Show your favorite app icons next to the session buttons"
    },
    "show-places-category":{
        "type":"switch",
        "default":true,
        "description":"Show bookmarks and places",
        "tooltip":"Show bookmarks and places category in the menu"
    },
    "show-recents-category":{
        "type":"switch",
        "default":true,
        "description":"Show recent files",
        "tooltip":"Show recent files category in the menu"
    },
    "show-web-bookmarks-category":{
        "type":"checkbox",
        "default":false,
        "description":"Show web bookmarks",
        "tooltip":"Show your browser's web bookmarks in the menu.\nNote: Install package gir1.2-gda-5.0 to read firefox bookmarks."
    },
    "show-favorite-apps-category":{
        "type":"switch",
        "default":false,
        "description":"Show favorite apps category",
        "tooltip":"Show your favorite apps category in the menu"
    },
    "show-home-folder-category":{
        "type":"checkbox",
        "default":true,
        "description":"Show home folder",
        "tooltip":"Show home folder category in the menu"
    },
    "menu-editor-button":{
        "type":"button",
        "description":"Open the menu editor",
        "callback":"launchEditor"
    },

    "overlay-key":{
        "type":"keybinding",
        "description":"Keyboard shortcut to open and close the menu",
        "default":"Super_L::Super_R"
    },
    "activate-on-hover":{
        "type":"checkbox",
        "default":false,
        "description":"Open menu on hover",
        "tooltip":"Open the menu when I move my mouse over the panel icon"
    },
    "hover-delay":{
        "indent":true,
        "dependency":"activate-on-hover",
        "type":"spinbutton",
        "default":50,
        "min":0,
        "max":1000,
        "step":50,
        "units":"milliseconds",
        "description":"Menu hover delay"
    },
    "enable-animation":{
        "type":"checkbox",
        "default":false,
        "description":"Use menu animations",
        "tooltip":"Animate the menu on open and close"
    },

    "category-click":{
        "type":"checkbox",
        "default":false,
        "description":"Activate categories on click",
        "tooltip":"Activate categories on click instead of on hover"
    },
    "open-on-favorites":{
        "type":"checkbox",
        "default":false,
        "description":"Always open menu on favorite apps",
        "tooltip":"Always open the menu with favorite apps category selected"
    },
    "enable-autoscroll":{
        "type":"checkbox",
        "default":true,
        "description":"Enable autoscrolling",
        "tooltip":"Autoscroll the application list on mouse hover"
    },
    "web-search-option":{
        "type":"combobox",
        "default":0,
        "description":"Web search option",
        "options":{
            "Google":0,
            "Bing":1,
            "Yahoo":2,
            "DuckDuckGo":3,
            "None":4
        },
        "tooltip":"Show an internet search option in search results"
    },
    "enable-emoji-search":{
        "type":"checkbox",
        "default":true,
        "description":"Enable emoji search",
        "tooltip":"Show emojis in search results"
    },
    "show-hidden-files":{
        "type":"checkbox",
        "default":false,
        "description":"Show hidden files",
        "tooltip":"Show hidden files in folder view"
    },

    "menu-icon-custom":{
        "type":"checkbox",
        "default":false,
        "description":"Use a custom icon",
        "tooltip":"Use a custom icon in the panel"
    },
    "menu-icon":{
        "type":"iconfilechooser",
        "default":"/usr/share/cinnamon/theme/menu-symbolic.svg",
        "description":"Panel icon",
        "dependency":"menu-icon-custom",
        "indent":"true",
        "tooltip":"Panel icon"
    },
    "menu-label":{
        "type":"entry",
        "default":"Menu",
        "description":"Panel text",
        "tooltip":"Text to show beside the panel icon"
    },

    "category-icon-size":{
        "indent":true,
        "type":"spinbutton",
        "default":24,
        "min":0,
        "max":256,
        "step":1,
        "units":"pixels",
        "description":"Category icon size",
        "tooltip":"Category icon size"
    },
    "apps-list-icon-size":{
        "indent":true,
        "type":"spinbutton",
        "default":24,
        "min":0,
        "max":256,
        "step":1,
        "units":"pixels",
        "description":"Applications list icon size",
        "tooltip":"Applications list icon size"
    },
    "apps-grid-icon-size":{
        "indent":true,
        "type":"spinbutton",
        "default":64,
        "min":0,
        "max":256,
        "step":1,
        "units":"pixels",
        "description":"Applications grid icon size",
        "tooltip":"Applications grid icon size"
    },
    "sidebar-icon-size":{
        "indent":true,
        "type":"spinbutton",
        "default":32,
        "min":6,
        "max":64,
        "step":1,
        "units":"pixels",
        "description":"Session buttons icon size",
        "tooltip":"Session buttons icon size"
    },
    "use-box-style":{
        "type":"checkbox",
        "default":false,
        "description":"Use session buttons box style",
        "tooltip":"Use session buttons box style"
    }
}
